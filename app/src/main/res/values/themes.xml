<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="NoActionBarTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- Application theme. -->

    <!-- <style name="TransparentActionBarTheme" parent="android:Theme.Holo.Light.DarkActionBar"> -->
    <style name="TransparentActionBarTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- ActionBar styles -->
    <!-- <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"> -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- <item name="background">@color/pink_transparent_50</item> -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">normal</item>
        <item name="background">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="NoActionBarTheme">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@color/brown</item>l
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>


    <style name="SplashTheme.DarkStatusBar"></style>


    <style name="LoginTheme" parent="NoActionBarTheme">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowBackground">@drawable/bg_login</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="LoginTheme.DarkStatusBar"></style>

    <style name="LoginTheme.NoBackground">

        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--	<style name="LoginTheme.WithLogo">
            <item name="android:windowBackground">@drawable/splash_placeholder</item>
        </style>


        <style name="LoginTheme.DarkStatusBar.WithLogo">
            <item name="android:windowBackground">@drawable/splash_placeholder</item>
            <item name="android:textColor">@color/white</item>
        </style>

        -->

    <style name="ThemeDialogCustom" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:typeface">normal</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ThemeDialogCustom.NoBackground">
        <item name="android:windowBackground">@null</item>
    </style>

    <!--	<style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
            &lt;!&ndash; Customize color of navigation drawer icon and back arrow &ndash;&gt;
            <item name="android:background">@color/white</item>
            <item name="colorControlNormal">@color/text_3</item>
        </style>-->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ToolbarStyleDark" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="RatingBar" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="RatingBar.Small" parent="AppTheme">

    </style>

    <style name="CheckBox" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/brown</item>
    </style>

    <style name="myDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ProgressTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/brown</item>
    </style>
    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>